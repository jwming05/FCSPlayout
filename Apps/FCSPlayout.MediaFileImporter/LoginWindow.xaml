<Window x:Class="FCSPlayout.MediaFileImporter.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FCSPlayout.MediaFileImporter"
        mc:Ignorable="d"
        Title="用户登录" Height="180" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:LoginView x:Name="loginView"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Name="btnOK" Click="btnOK_Click" Content="确定" Padding="5" VerticalAlignment="Top" Margin="5"/>
            <Button Name="btnCancel" Click="btnCancel_Click" Content="取消" Padding="5" VerticalAlignment="Top" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
